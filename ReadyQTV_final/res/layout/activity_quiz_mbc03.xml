<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical" 
        android:background="@drawable/game01_bar">
    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="330dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/quiz_background"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/channel_select_extra" />
            
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="75dp"
                android:text="TV : ABC[Samsung VS SK]"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="28dp"
                android:text="18:00pm - 20:00pm"
                android:textSize="13dp"
                android:textColor="#696969"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/quiz_ask01" >

            <ProgressBar
                android:id="@+id/progressBar_quiz"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="195dp"
                android:layout_height="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="74dp"
                android:max="100"
                android:progress="0"
                 />

            <TextView
                android:id="@+id/textView1_quiz"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="25dp"
                android:text="최정 선수는 병살타를 친다."
                android:textSize="13dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <FrameLayout
                android:layout_width="105dp"
                android:layout_height="90dp" 
                android:layout_marginTop="35dp"
                android:layout_marginLeft="150dp"
                android:background="#B22222">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25dp"
                    android:text="NO" 
                    android:background="@drawable/my_button1"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="105dp"
                android:layout_height="90dp" 
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:background="#00BFFF">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="25dp"
                    android:text="YES" 
                    android:background="@drawable/my_button1"/>

            </FrameLayout>

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/quiz_star" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ad1"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>