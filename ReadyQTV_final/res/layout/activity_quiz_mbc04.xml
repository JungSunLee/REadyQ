<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/game01_bar"
        android:orientation="vertical" >
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="330dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/quiz_background">
        
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp" >

        <TableRow
            android:id="@+id/tableRow_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
		    	android:layout_width="65dip"
		    	android:layout_height="wrap_content"
		    	android:textStyle="bold|italic"
		    	android:textColor="#000000"
		    	android:gravity="center"
		    	android:padding="5dip"
		    	android:text="LEVEL"
		    />
            <TextView
		    	android:layout_width="150dip"
		    	android:layout_height="wrap_content"
		    	android:textStyle="bold|italic"
		    	android:textColor="#000000"
		    	android:gravity="center"
		    	android:padding="5dip"
		    	android:text="12"
		    />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
		    	android:layout_width="65dip"
		    	android:layout_height="wrap_content"
		    	android:textStyle="bold|italic"
		    	android:textColor="#000000"
		    	android:gravity="center"
		    	android:padding="5dip"
		    	android:text="POINT +"
		    />
            <TextView
		    	android:layout_width="150dip"
		    	android:layout_height="wrap_content"
		    	android:textStyle="bold|italic"
		    	android:textColor="#000000"
		    	android:gravity="center"
		    	android:padding="5dip"
		    	android:text="356"
		    />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
		    	android:layout_width="65dip"
		    	android:layout_height="wrap_content"
		    	android:textStyle="bold|italic"
		    	android:textColor="#000000"
		    	android:gravity="bottom"
		    	android:padding="5dip"
		    	android:text="STAR +"
		    />
            <TextView
		    	android:layout_width="150dip"
		    	android:layout_height="wrap_content"
		    	android:textStyle="bold|italic"
		    	android:textColor="#000000"
		    	android:gravity="center"
		    	android:padding="5dip"
		    	android:text="98"
		    />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/imageView_chart"
        android:layout_width="200dp"
        android:layout_height="290dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ask_chart2" />

    <ImageView
        android:id="@+id/imageView_right1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/wrong2" />

    <ImageView
        android:id="@+id/imageView_right2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/wrong1" />

    <Button
        android:id="@+id/button_oknext1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="280dp"
        android:text="확인" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/channel_select_extra" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="260dp"
        android:src="@drawable/quiz_star" />

    </FrameLayout>
    
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/ad1"
        android:orientation="vertical" >
        
    </LinearLayout>

</LinearLayout>